# exit i3 (logs you out of your X session)
bindsym $mod+Shift+x exec "i3-nagbar -t warning -m 'You want to exit i3?' -b 'Shutdown' 'sudo shutdown -h now' -b 'Reboot' 'sudo  reboot' -b 'Hibernate' 'sudo pm-hibernate' -b 'Suspend' 'sudo pm-suspend' -b 'Logout' 'i3-msg exit'"
bindsym $mod+x exec /home/kutti/.i3/lock

